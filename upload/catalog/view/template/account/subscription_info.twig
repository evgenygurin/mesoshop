{{ header }}
<div id="account-subscription" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    {{ column_left }}
    <div id="content" class="col">
      {{ content_top }}

      <!-- Subscription Summary Cards -->
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="bg-primary bg-gradient rounded-circle p-3 me-3">
                  <i class="fa-solid fa-rotate text-white"></i>
                </div>
                <div>
                  <h6 class="text-muted mb-1">{{ text_subscription_id }}</h6>
                  <h4 class="mb-0">#{{ subscription_id }}</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% if order_id %}
          <div class="col-md-6">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="bg-success bg-gradient rounded-circle p-3 me-3">
                    <i class="fa-solid fa-shopping-bag text-white"></i>
                  </div>
                  <div>
                    <h6 class="text-muted mb-1">{{ text_order_id }}</h6>
                    <h4 class="mb-0"><a href="{{ order_link }}" target="_blank" class="text-decoration-none">{{ order_id }}</a></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      {% if payment_address or shipping_address %}
        <!-- Address Cards -->
        <div class="row g-3 mb-4">
          {% if payment_address %}
            <div class="col-md-6">
              <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                  <h6 class="mb-0">
                    <i class="fa-solid fa-credit-card me-2 text-primary"></i>{{ text_payment_address }}
                  </h6>
                </div>
                <div class="card-body">
                  <address class="mb-0">{{ payment_address }}</address>
                </div>
              </div>
            </div>
          {% endif %}
          {% if shipping_address %}
            <div class="col-md-6">
              <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                  <h6 class="mb-0">
                    <i class="fa-solid fa-truck me-2 text-success"></i>{{ text_shipping_address }}
                  </h6>
                </div>
                <div class="card-body">
                  <address class="mb-0">{{ shipping_address }}</address>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      <!-- Shipping & Payment Method Cards -->
      <div class="row g-3 mb-4">
        {% if shipping_method %}
          <div class="col-md-6">
            <div class="card shadow-sm h-100">
              <div class="card-header bg-light">
                <h6 class="mb-0">
                  <i class="fa-solid fa-shipping-fast me-2 text-info"></i>{{ text_shipping_method }}
                </h6>
              </div>
              <div class="card-body">
                <p class="mb-0">{{ shipping_method }}</p>
              </div>
            </div>
          </div>
        {% endif %}
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
              <h6 class="mb-0">
                <i class="fa-solid fa-money-bill-wave me-2 text-warning"></i>{{ text_payment_method }}
              </h6>
            </div>
            <div class="card-body">
              <p class="mb-0">{{ payment_method }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Products Table -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="fa-solid fa-box me-2 text-primary"></i>Subscription Products
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="px-4 py-3">{{ column_product }}</th>
                  <th class="px-4 py-3 text-end">{{ column_quantity }}</th>
                  <th class="px-4 py-3 text-end">{{ column_trial_price }}</th>
                  <th class="px-4 py-3 text-end">{{ column_price }}</th>
                </tr>
              </thead>
              <tbody>
                {% if products %}
                  {% for product in products %}
                    <tr class="border-bottom">
                      <td class="px-4 py-3">
                        <a href="{{ product.product_edit }}" target="_blank" class="text-decoration-none fw-bold">{{ product.name }}</a>
                        <ul class="list-unstyled mb-0 mt-2">
                          <li class="text-muted small">
                            <i class="fa-solid fa-tag me-1"></i>{{ text_model }}: {{ product.model }}
                          </li>
                          {% for option in product.option %}
                            <li class="text-muted small">
                              <i class="fa-solid fa-cog me-1"></i>{{ option.name }}: <strong>{{ option.value }}</strong>
                            </li>
                          {% endfor %}
                        </ul>
                      </td>
                      <td class="px-4 py-3 text-end">
                        <span class="badge bg-light text-dark fs-6">x{{ product.quantity }}</span>
                      </td>
                      <td class="px-4 py-3 text-end">
                        <x-currency code="{{ currency_code }}" value="{{ currency_value }}" amount="{{ product.trial_price }}"></x-currency>
                      </td>
                      <td class="px-4 py-3 text-end">
                        <strong class="fs-6"><x-currency code="{{ currency_code }}" value="{{ currency_value }}" amount="{{ product.price }}"></x-currency></strong>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <tr>
                    <td colspan="4" class="text-center py-5">
                      <i class="fa-solid fa-box-open fa-3x text-muted mb-3 d-block"></i>
                      <span class="text-muted">{{ text_no_results }}</span>
                    </td>
                  </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Subscription Plan Card -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h6 class="mb-0">
            <i class="fa-solid fa-calendar-alt me-2 text-info"></i>{{ text_subscription_plan }}
          </h6>
        </div>
        <div class="card-body">
          <p class="mb-0">{{ description }}</p>
        </div>
      </div>

      <!-- Subscription Schedule -->
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="bg-info bg-gradient rounded-circle p-3 me-3">
                  <i class="fa-solid fa-calendar-day text-white"></i>
                </div>
                <div>
                  <h6 class="text-muted mb-1">{{ text_date_next }}</h6>
                  <h5 class="mb-0">{{ date_next }}</h5>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% if duration %}
          <div class="col-md-6">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="bg-warning bg-gradient rounded-circle p-3 me-3">
                    <i class="fa-solid fa-hourglass-half text-white"></i>
                  </div>
                  <div>
                    <h6 class="text-muted mb-1">{{ text_remaining }}</h6>
                    <h5 class="mb-0">{{ remaining }}</h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Cancel Subscription Button -->
      <div class="text-end mb-4">
        <button type="button" id="button-cancel" class="btn btn-danger">
          <i class="fa-solid fa-times-circle me-2"></i>{{ button_cancel }}
        </button>
      </div>

      <!-- Subscription History -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="fa-solid fa-history me-2 text-secondary"></i>{{ text_history }}
          </h5>
        </div>
        <div class="card-body" id="history">{{ history }}</div>
      </div>

      <!-- Related Orders -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="fa-solid fa-receipt me-2 text-primary"></i>{{ text_order }}
          </h5>
        </div>
        <div class="card-body" id="order">{{ order }}</div>
      </div>

      <div class="text-end mt-3">
        <a href="{{ continue }}" class="btn btn-primary">
          <i class="fa-solid fa-arrow-left me-2"></i>{{ button_continue }}
        </a>
      </div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
<script type="text/javascript"><!--
$('#button-cancel').on('click', function(e) {
    e.preventDefault();

    var element = this;

    $.ajax({
        url: 'index.php?route=account/subscription.cancel&language={{ language }}&customer_token={{ customer_token }}&subscription_id={{ subscription_id }}',
        dataType: 'json',
        beforeSend: function() {
            $(element).button('loading');
        },
        complete: function() {
            $(element).button('reset');
        },
        success: function(json) {
            console.log(json);

            if (json['error']) {
                $('#alert').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> ' + json['error'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
            }

            if (json['success']) {
                $('#alert').prepend('<div class="alert alert-success alert-dismissible"><i class="fa-solid fa-circle-check"></i> ' + json['success'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');

                $('#history').load('index.php?route=account/subscription.history&language={{ language }}&customer_token={{ customer_token }}&subscription_id={{ subscription_id }}');
            }
        },
        error: function(xhr, ajaxOptions, thrownError) {
            console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
});

$('#history').on('click', '.pagination a', function(e) {
    e.preventDefault();

    $('#history').load(this.href);
});

$('#order').on('click', '.pagination a', function(e) {
    e.preventDefault();

    $('#order').load(this.href);
});
//--></script>
{{ footer }}
