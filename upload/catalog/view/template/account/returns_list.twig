{{ header }}
<div id="account-return" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if returns %}
        <!-- Returns Cards -->
        <div class="row g-4 mb-4">
          {% for return in returns %}
            <div class="col-12 col-lg-6">
              <div class="card shadow-sm hover-shadow-lg transition-all">
                <div class="card-body">
                  <div class="row align-items-center">
                    <!-- Return ID -->
                    <div class="col-auto">
                      <div class="bg-info bg-gradient text-white rounded p-3 text-center">
                        <div class="fw-bold">#{{ return.return_id }}</div>
                        <small class="opacity-75">Return ID</small>
                      </div>
                    </div>

                    <!-- Return Details -->
                    <div class="col">
                      <div class="mb-2">
                        {% set status_class = 'secondary' %}
                        {% if return.status matches '/Approved|Complete/' %}
                          {% set status_class = 'success' %}
                        {% elseif return.status matches '/Pending|Awaiting/' %}
                          {% set status_class = 'warning' %}
                        {% elseif return.status matches '/Cancelled|Rejected/' %}
                          {% set status_class = 'danger' %}
                        {% endif %}
                        <span class="badge bg-{{ status_class }} bg-gradient">
                          {{ return.status }}
                        </span>
                      </div>
                      <div class="d-flex gap-3 text-muted small">
                        <span>
                          <i class="fa-solid fa-receipt me-1"></i>
                          Order #{{ return.order_id }}
                        </span>
                        <span>
                          <i class="fa-regular fa-calendar me-1"></i>
                          {{ return.date_added }}
                        </span>
                      </div>
                    </div>

                    <!-- Actions -->
                    <div class="col-auto">
                      <a href="{{ return.href }}" class="btn btn-outline-primary">
                        <i class="fa-solid fa-eye me-2"></i>{{ button_view }}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="card border-0 bg-light">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-sm-6 text-start">{{ pagination }}</div>
              <div class="col-sm-6 text-end text-muted">{{ results }}</div>
            </div>
          </div>
        </div>
      {% else %}
        <!-- Empty State -->
        <div class="card border-0 bg-light">
          <div class="card-body text-center py-5">
            <i class="fa-solid fa-box-open fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">{{ text_no_results }}</h4>
            <p class="text-muted mb-4">You haven't made any return requests</p>
            <a href="{{ continue }}" class="btn btn-primary">
              <i class="fa-solid fa-shopping-bag me-2"></i>Continue Shopping
            </a>
          </div>
        </div>
      {% endif %}
      <div class="text-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
