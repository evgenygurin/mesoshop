{{ header }}
<div id="account-return" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    {{ column_left }}
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      <div class="alert alert-info">
        <i class="fa-solid fa-info-circle me-2"></i>{{ text_description }}
      </div>

      <form id="form-return" action="{{ save }}" method="post" data-oc-toggle="ajax">
        <!-- Order Information Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">
              <i class="fa-solid fa-shopping-bag me-2 text-primary"></i>{{ text_order }}
            </h5>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <label for="input-order-id" class="col-sm-3 col-form-label">
                {{ entry_order_id }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="text" name="order_id" value="{{ order_id }}" placeholder="{{ entry_order_id }}" id="input-order-id" class="form-control" required/>
                <div id="error-order-id" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-date-ordered" class="col-sm-3 col-form-label">{{ entry_date_ordered }}</label>
              <div class="col-sm-9 col-md-6">
                <input type="date" name="date_ordered" value="{{ date_ordered }}" placeholder="{{ entry_date_ordered }}" id="input-date-ordered" class="form-control"/>
              </div>
            </div>
          </div>
        </div>

        <!-- Customer Information Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">
              <i class="fa-solid fa-user me-2 text-success"></i>{{ text_customer }}
            </h5>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <label for="input-firstname" class="col-sm-3 col-form-label">
                {{ entry_firstname }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="text" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control" required/>
                <div id="error-firstname" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-lastname" class="col-sm-3 col-form-label">
                {{ entry_lastname }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control" required/>
                <div id="error-lastname" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-email" class="col-sm-3 col-form-label">
                {{ entry_email }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" required/>
                <div id="error-email" class="invalid-feedback"></div>
              </div>
            </div>
            {% if config_telephone_display %}
              <div class="row mb-3">
                <label for="input-telephone" class="col-sm-3 col-form-label">
                  {{ entry_telephone }}{% if config_telephone_required %} <span class="text-danger">*</span>{% endif %}
                </label>
                <div class="col-sm-9">
                  <input type="text" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control"{% if config_telephone_required %} required{% endif %}/>
                  <div id="error-telephone" class="invalid-feedback"></div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Product Details Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">
              <i class="fa-solid fa-box me-2 text-info"></i>{{ text_product }}
            </h5>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <label for="input-product" class="col-sm-3 col-form-label">
                {{ entry_product }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="hidden" name="product_id" value="{{ product_id }}"/>
                <input type="text" name="product" value="{{ product }}" placeholder="{{ entry_product }}" id="input-product" class="form-control" required/>
                <div id="error-product" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-model" class="col-sm-3 col-form-label">
                {{ entry_model }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <input type="text" name="model" value="{{ model }}" placeholder="{{ entry_model }}" id="input-model" class="form-control" required/>
                <div id="error-model" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-quantity" class="col-sm-3 col-form-label">{{ entry_quantity }}</label>
              <div class="col-sm-9 col-md-3">
                <input type="text" name="quantity" value="1" placeholder="{{ entry_quantity }}" id="input-quantity" class="form-control"/>
              </div>
            </div>
          </div>
        </div>

        <!-- Return Reason Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">
              <i class="fa-solid fa-undo me-2 text-warning"></i>Return Details
            </h5>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <label class="col-sm-3 col-form-label">
                {{ entry_reason }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <div id="input-reason">
                  {% for return_reason in return_reasons %}
                    <div class="form-check mb-2">
                      <input type="radio" name="return_reason_id" value="{{ return_reason.return_reason_id }}" id="input-return-reason-{{ return_reason.return_reason_id }}" class="form-check-input"/>
                      <label for="input-return-reason-{{ return_reason.return_reason_id }}" class="form-check-label">{{ return_reason.name }}</label>
                    </div>
                  {% endfor %}
                </div>
                <div id="error-reason" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-3 col-form-label">
                {{ entry_opened }} <span class="text-danger">*</span>
              </label>
              <div class="col-sm-9">
                <div class="form-check form-check-inline">
                  <input type="radio" name="opened" value="1" id="input-opened-yes" class="form-check-input" checked/>
                  <label for="input-opened-yes" class="form-check-label">
                    <i class="fa-solid fa-check-circle text-success me-1"></i>{{ text_yes }}
                  </label>
                </div>
                <div class="form-check form-check-inline">
                  <input type="radio" name="opened" value="0" id="input-opened-no" class="form-check-input"/>
                  <label for="input-opened-no" class="form-check-label">
                    <i class="fa-solid fa-times-circle text-danger me-1"></i>{{ text_no }}
                  </label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-comment" class="col-sm-3 col-form-label">{{ entry_fault_detail }}</label>
              <div class="col-sm-9">
                <textarea name="comment" rows="5" placeholder="{{ entry_fault_detail }}" id="input-comment" class="form-control"></textarea>
                <small class="form-text text-muted">Please provide detailed information about the issue</small>
              </div>
            </div>
            {{ captcha }}
          </div>
        </div>

        <!-- Form Actions -->
        <div class="card border-0 bg-light">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-4 mb-3 mb-md-0">
                <a href="{{ back }}" class="btn btn-outline-secondary">
                  <i class="fa-solid fa-arrow-left me-2"></i>{{ button_back }}
                </a>
              </div>
              <div class="col-md-8 text-end">
                {% if text_agree %}
                  <div class="form-check form-check-inline align-middle">
                    <x-switch name="agree" value="1" input-id="input-agree" input-class="form-switch form-switch-lg form-check-reverse"></x-switch>
                    <label for="input-agree" class="form-check-label ms-2">{{ text_agree }}</label>
                  </div>
                {% endif %}
                <button type="submit" class="btn btn-primary btn-lg">
                  <i class="fa-solid fa-paper-plane me-2"></i>{{ button_submit }}
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
