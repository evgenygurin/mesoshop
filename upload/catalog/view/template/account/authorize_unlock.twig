{{ header }}
<div id="account-authorize-unlock">
  <div class="container-fluid">
    <br/>
    <br/>
    <div class="row justify-content-center">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <!-- Unlock Success Card -->
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-success text-white border-0 p-4">
            <div class="d-flex align-items-center">
              <div class="icon-shape icon-lg bg-white text-success rounded-circle me-3">
                <i class="fa-solid fa-unlock fa-2x"></i>
              </div>
              <div>
                <h4 class="mb-0 fw-bold">{{ text_unlocked }}</h4>
                <p class="mb-0 small opacity-90">Account Successfully Unlocked</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 p-md-5">
            <div class="alert alert-success border-0 mb-4">
              <div class="d-flex">
                <div class="flex-shrink-0">
                  <i class="fa-solid fa-check-circle fa-2x"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                  <h5 class="alert-heading fw-bold mb-2">Authentication Reset Complete</h5>
                  <p class="mb-0">{{ text_unlock }}</p>
                </div>
              </div>
            </div>

            <div class="d-grid">
              <a href="{{ login }}" class="btn btn-primary btn-lg py-3 fw-semibold">
                <i class="fa-solid fa-right-to-bracket me-2"></i>{{ button_login }}
              </a>
            </div>

            <div class="text-center mt-4">
              <p class="text-muted small mb-0">
                <i class="fa-solid fa-shield-halved me-1"></i>
                Please log in to continue using your account
              </p>
            </div>
          </div>
        </div>

        <!-- Security Information -->
        <div class="card border-0 shadow-sm mt-4">
          <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-3">
              <i class="fa-solid fa-info-circle text-primary me-2"></i>
              Next Steps
            </h5>
            <ul class="list-unstyled mb-0">
              <li class="mb-2">
                <i class="fa-solid fa-check text-success me-2"></i>
                Log in with your email and password
              </li>
              <li class="mb-2">
                <i class="fa-solid fa-check text-success me-2"></i>
                Set up two-factor authentication (recommended)
              </li>
              <li class="mb-0">
                <i class="fa-solid fa-check text-success me-2"></i>
                Review your account security settings
              </li>
            </ul>
          </div>
        </div>

        <!-- Help Information -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <i class="fa-solid fa-question-circle me-1"></i>
            Need help? <a href="#" class="text-decoration-none">Contact Support</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Authorize Unlock Page Enhancements */
#account-authorize-unlock .icon-shape {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
}

#account-authorize-unlock .icon-shape.icon-lg {
  width: 64px;
  height: 64px;
}

#account-authorize-unlock .card {
  border-radius: 16px;
  overflow: hidden;
}

#account-authorize-unlock .card-header {
  border-bottom: none;
}

#account-authorize-unlock .alert {
  border-radius: 12px;
  background-color: #d1e7dd;
}

#account-authorize-unlock .alert .alert-heading {
  color: #0a3622;
}

#account-authorize-unlock .alert p {
  color: #0a3622;
}

#account-authorize-unlock .btn-primary {
  transition: all 0.3s ease;
}

#account-authorize-unlock .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(13, 110, 253, 0.3);
}

#account-authorize-unlock .card-title {
  color: #344767;
}

#account-authorize-unlock .list-unstyled li {
  padding-left: 0;
  line-height: 1.8;
}

@media (max-width: 768px) {
  #account-authorize-unlock .icon-shape {
    width: 40px;
    height: 40px;
  }

  #account-authorize-unlock .icon-shape.icon-lg {
    width: 56px;
    height: 56px;
  }

  #account-authorize-unlock .card-body {
    padding: 2rem !important;
  }

  #account-authorize-unlock .card-header {
    padding: 1.5rem !important;
  }
}
</style>

