{{ header }}
<div id="account-subscription" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    {{ column_left }}
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if subscriptions %}
        <!-- Subscription Cards -->
        <div class="row g-4 mb-4">
          {% for subscription in subscriptions %}
            <div class="col-12">
              <div class="card shadow-sm hover-shadow-lg transition-all">
                <div class="card-body">
                  <div class="row align-items-center">
                    <!-- Subscription ID -->
                    <div class="col-md-2">
                      <div class="text-center">
                        <div class="badge bg-primary bg-gradient fs-5 mb-2">
                          #{{ subscription.subscription_id }}
                        </div>
                        <p class="text-muted small mb-0">Subscription ID</p>
                      </div>
                    </div>

                    <!-- Description & Details -->
                    <div class="col-md-5">
                      <h6 class="mb-2">{{ subscription.description }}</h6>
                      <div class="d-flex gap-3 text-muted small">
                        <span>
                          <i class="fa-solid fa-box me-1"></i>
                          <strong>{{ subscription.product_total }}</strong> {{ subscription.product_total == 1 ? 'Product' : 'Products' }}
                        </span>
                        <span>
                          <i class="fa-regular fa-calendar me-1"></i>
                          {{ subscription.date_added }}
                        </span>
                      </div>
                    </div>

                    <!-- Status Badge -->
                    <div class="col-md-3 text-center">
                      {% set status_class = 'secondary' %}
                      {% if subscription.status matches '/Active|Running/' %}
                        {% set status_class = 'success' %}
                      {% elseif subscription.status matches '/Pending/' %}
                        {% set status_class = 'warning' %}
                      {% elseif subscription.status matches '/Cancelled|Expired/' %}
                        {% set status_class = 'danger' %}
                      {% elseif subscription.status matches '/Completed/' %}
                        {% set status_class = 'info' %}
                      {% endif %}
                      <span class="badge bg-{{ status_class }} bg-gradient fs-6 px-3 py-2">
                        <i class="fa-solid fa-circle-dot me-1"></i>
                        {{ subscription.status }}
                      </span>
                    </div>

                    <!-- Actions -->
                    <div class="col-md-2 text-end">
                      <a href="{{ subscription.view }}" class="btn btn-outline-primary">
                        <i class="fa-solid fa-eye me-2"></i>{{ button_view }}
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="card border-0 bg-light">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-sm-6 text-start">{{ pagination }}</div>
              <div class="col-sm-6 text-end text-muted">{{ results }}</div>
            </div>
          </div>
        </div>
      {% else %}
        <!-- Empty State -->
        <div class="card border-0 bg-light">
          <div class="card-body text-center py-5">
            <i class="fa-solid fa-rotate fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">{{ text_no_subscription }}</h4>
            <p class="text-muted mb-4">You don't have any subscriptions yet</p>
            <a href="{{ continue }}" class="btn btn-primary">
              <i class="fa-solid fa-shopping-bag me-2"></i>Start Shopping
            </a>
          </div>
        </div>
      {% endif %}
      <div class="text-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
