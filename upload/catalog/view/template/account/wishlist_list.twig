{% if products %}
  <!-- Modern Card Grid Layout -->
  <div class="row g-4 mb-4">
    {% set product_row = 0 %}
    {% for product in products %}
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm hover-shadow-lg transition-all">
          <!-- Product Image -->
          <div class="position-relative overflow-hidden">
            {% if product.thumb %}
              <a href="{{ product.href }}" class="d-block">
                <img src="{{ product.thumb }}" alt="{{ product.name }}" class="card-img-top" style="height: 250px; object-fit: cover;">
              </a>
            {% else %}
              <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                <i class="fa-solid fa-image fa-3x text-muted"></i>
              </div>
            {% endif %}

            <!-- Stock Badge -->
            <div class="position-absolute top-0 end-0 m-3">
              <span class="badge {{ product.stock matches '/In Stock|Available/' ? 'bg-success' : 'bg-warning' }}">
                {{ product.stock }}
              </span>
            </div>

            <!-- Special Price Badge -->
            {% if product.special %}
              <div class="position-absolute top-0 start-0 m-3">
                <span class="badge bg-danger">Sale</span>
              </div>
            {% endif %}
          </div>

          <!-- Product Details -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2">
              <a href="{{ product.href }}" class="text-dark text-decoration-none hover-text-primary">
                {{ product.name }}
              </a>
            </h5>

            <p class="text-muted small mb-3">
              <span class="badge bg-light text-dark border">{{ product.model }}</span>
            </p>

            <!-- Pricing -->
            {% if product.price %}
              <div class="mb-3 mt-auto">
                {% if product.special %}
                  <div class="d-flex align-items-center gap-2">
                    <span class="h5 mb-0 text-danger fw-bold">
                      <x-currency code="{{ currency }}" amount="{{ product.special }}"></x-currency>
                    </span>
                    <span class="text-muted text-decoration-line-through">
                      <x-currency code="{{ currency }}" amount="{{ product.price }}"></x-currency>
                    </span>
                  </div>
                  <small class="text-success">
                    Save {{ ((product.price - product.special) / product.price * 100)|round }}%
                  </small>
                {% else %}
                  <span class="h5 mb-0 text-dark fw-bold">
                    <x-currency code="{{ currency }}" amount="{{ product.price }}"></x-currency>
                  </span>
                {% endif %}
              </div>
            {% endif %}

            <!-- Hidden Form for Cart -->
            <form id="form-product-{{ product_row }}" action="{{ cart_add }}" method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart">
              <input type="hidden" name="product_id" value="{{ product.product_id }}"/>
              <input type="hidden" name="quantity" value="{{ product.minimum }}"/>
            </form>

            <!-- Action Buttons -->
            <div class="d-flex gap-2">
              <button type="submit" form="form-product-{{ product_row }}" class="btn btn-primary flex-grow-1">
                <i class="fa-solid fa-cart-shopping me-2"></i>{{ button_cart }}
              </button>
              <a href="{{ product.remove }}" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="{{ button_remove }}">
                <i class="fa-solid fa-trash"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      {% set product_row = product_row + 1 %}
    {% endfor %}
  </div>
{% else %}
  <!-- Empty State -->
  <div class="card border-0 bg-light">
    <div class="card-body text-center py-5">
      <i class="fa-solid fa-heart fa-4x text-muted mb-3"></i>
      <h4 class="text-muted">{{ text_no_results }}</h4>
      <p class="text-muted mb-4">Start adding products to your wishlist to see them here</p>
      <a href="{{ continue }}" class="btn btn-primary">
        <i class="fa-solid fa-shopping-bag me-2"></i>Continue Shopping
      </a>
    </div>
  </div>
{% endif %}
