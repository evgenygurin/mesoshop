{# Modern Astro Ecommerce Product Card Component #}
<div class="product-thumb">
  <div class="card card-product h-100 shadow-sm">
    {# Product Image with Hover Effect #}
    <div class="position-relative overflow-hidden">
      <a href="{{ href }}" class="d-block">
        <img src="{{ thumb }}" alt="{{ name }}" title="{{ name }}" class="card-img-top" style="object-fit: cover; height: 250px;"/>
      </a>

      {# Sale Badge #}
      {% if special %}
        <span class="badge bg-danger position-absolute top-0 end-0 m-3">
          <i class="bi bi-tag-fill"></i> Sale
        </span>
      {% endif %}

      {# Quick Action Buttons - Visible on Hover #}
      <div class="position-absolute bottom-0 start-0 end-0 p-3 bg-gradient" style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent); opacity: 0; transition: opacity 0.3s;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0'">
        <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart" class="d-flex gap-2 justify-content-center">
          <button type="submit" formaction="{{ cart_add }}" data-bs-toggle="tooltip" title="{{ button_cart }}" class="btn btn-sm btn-light">
            <i class="bi bi-cart-plus"></i>
          </button>
          <button type="submit" formaction="{{ wishlist_add }}" data-bs-toggle="tooltip" title="{{ button_wishlist }}" class="btn btn-sm btn-light">
            <i class="bi bi-heart"></i>
          </button>
          <button type="submit" formaction="{{ compare_add }}" data-bs-toggle="tooltip" title="{{ button_compare }}" class="btn btn-sm btn-light">
            <i class="bi bi-arrow-left-right"></i>
          </button>
          <input type="hidden" name="product_id" value="{{ product_id }}"/>
          <input type="hidden" name="quantity" value="{{ minimum }}"/>
        </form>
      </div>
    </div>

    {# Card Body with Product Details #}
    <div class="card-body d-flex flex-column">
      {# Product Title #}
      <h5 class="card-title mb-2">
        <a href="{{ href }}" class="text-dark text-decoration-none hover-primary" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
          {{ name }}
        </a>
      </h5>

      {# Product Description #}
      {% if description %}
        <p class="card-text text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
          {{ description }}
        </p>
      {% endif %}

      {# Rating Stars #}
      {% if review_status and rating %}
        <div class="d-flex align-items-center mb-3">
          <div class="text-warning me-2">
            {% for i in 1..5 %}
              {% if rating >= i %}
                <i class="bi bi-star-fill"></i>
              {% elseif rating >= (i - 0.5) %}
                <i class="bi bi-star-half"></i>
              {% else %}
                <i class="bi bi-star"></i>
              {% endif %}
            {% endfor %}
          </div>
          <small class="text-muted">({{ rating }})</small>
        </div>
      {% endif %}

      {# Price Section - Push to bottom #}
      <div class="mt-auto">
        {% if price %}
          <div class="d-flex align-items-center justify-content-between">
            <div>
              {% if special %}
                <div class="d-flex align-items-center gap-2">
                  <span class="h5 text-danger mb-0 fw-bold">
                    <x-currency code="{{ currency }}" amount="{{ special }}"></x-currency>
                  </span>
                  <span class="text-muted text-decoration-line-through small">
                    <x-currency code="{{ currency }}" amount="{{ price }}"></x-currency>
                  </span>
                </div>
              {% else %}
                <span class="h5 text-dark mb-0 fw-bold">
                  <x-currency code="{{ currency }}" amount="{{ price }}"></x-currency>
                </span>
              {% endif %}
              {% if tax %}
                <small class="text-muted d-block">{{ text_tax }} <x-currency code="{{ currency }}" amount="{{ tax }}"></x-currency></small>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    {# Card Footer with Add to Cart Button #}
    <div class="card-footer bg-transparent border-0 pt-0">
      <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#cart">
        <button type="submit" formaction="{{ cart_add }}" class="btn btn-primary w-100 btn-sm">
          <i class="bi bi-cart-plus"></i> {{ button_cart }}
        </button>
        <input type="hidden" name="product_id" value="{{ product_id }}"/>
        <input type="hidden" name="quantity" value="{{ minimum }}"/>
      </form>
    </div>
  </div>
</div>

<style>
/* Modern Product Card Hover Effects */
.card-product {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(0,0,0,0.1);
}

.card-product:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

.card-product img {
  transition: transform 0.3s ease;
}

.card-product:hover img {
  transform: scale(1.05);
}

.hover-primary:hover {
  color: var(--bs-primary) !important;
}

/* Rating stars styling */
.bi-star-fill, .bi-star-half, .bi-star {
  font-size: 0.875rem;
}
</style>
