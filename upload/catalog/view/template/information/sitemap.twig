{{ header }}
<div id="information-sitemap" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
      <h1 class="mb-4">{{ heading_title }}</h1>

      <div class="row g-4">
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0"><i class="fa-solid fa-folder-open me-2"></i>Product Categories</h5>
            </div>
            <div class="card-body">
              <ul class="list-unstyled sitemap-list">
                {% for category_1 in categories %}
                  <li class="mb-3">
                    <a href="{{ category_1.href }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                      <i class="fa-solid fa-chevron-right me-2 text-muted" style="font-size: 0.75rem;"></i>
                      {{ category_1.name }}
                    </a>
                    {% if category_1.children %}
                      <ul class="list-unstyled ms-4 mt-2">
                        {% for category_2 in category_1.children %}
                          <li class="mb-2">
                            <a href="{{ category_2.href }}" class="text-muted text-decoration-none d-flex align-items-center">
                              <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>
                              {{ category_2.name }}
                            </a>
                            {% if category_2.children %}
                              <ul class="list-unstyled ms-4 mt-1">
                                {% for category_3 in category_2.children %}
                                  <li class="mb-1">
                                    <a href="{{ category_3.href }}" class="text-muted text-decoration-none small">
                                      <i class="fa-solid fa-minus me-2" style="font-size: 0.5rem;"></i>
                                      {{ category_3.name }}
                                    </a>
                                  </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0"><i class="fa-solid fa-link me-2"></i>Quick Links</h5>
            </div>
            <div class="card-body">
              <ul class="list-unstyled sitemap-list">
                <li class="mb-3">
                  <a href="{{ special }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                    <i class="fa-solid fa-tag me-2 text-danger"></i>{{ text_special }}
                  </a>
                </li>
                <li class="mb-3">
                  <a href="{{ account }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                    <i class="fa-solid fa-user me-2 text-primary"></i>{{ text_account }}
                  </a>
                  <ul class="list-unstyled ms-4 mt-2">
                    <li class="mb-2">
                      <a href="{{ edit }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_edit }}
                      </a>
                    </li>
                    <li class="mb-2">
                      <a href="{{ password }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_password }}
                      </a>
                    </li>
                    <li class="mb-2">
                      <a href="{{ address }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_address }}
                      </a>
                    </li>
                    <li class="mb-2">
                      <a href="{{ history }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_history }}
                      </a>
                    </li>
                    <li class="mb-2">
                      <a href="{{ download }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_download }}
                      </a>
                    </li>
                  </ul>
                </li>
                <li class="mb-3">
                  <a href="{{ cart }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                    <i class="fa-solid fa-shopping-cart me-2 text-success"></i>{{ text_cart }}
                  </a>
                </li>
                <li class="mb-3">
                  <a href="{{ checkout }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                    <i class="fa-solid fa-credit-card me-2 text-warning"></i>{{ text_checkout }}
                  </a>
                </li>
                <li class="mb-3">
                  <a href="{{ search }}" class="text-dark fw-semibold text-decoration-none d-flex align-items-center">
                    <i class="fa-solid fa-magnifying-glass me-2 text-info"></i>{{ text_search }}
                  </a>
                </li>
                <li class="mb-3">
                  <span class="text-dark fw-semibold d-flex align-items-center">
                    <i class="fa-solid fa-info-circle me-2 text-secondary"></i>{{ text_information }}
                  </span>
                  <ul class="list-unstyled ms-4 mt-2">
                    {% for information in informations %}
                      <li class="mb-2">
                        <a href="{{ information.href }}" class="text-muted text-decoration-none d-flex align-items-center">
                          <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ information.title }}
                        </a>
                      </li>
                    {% endfor %}
                    <li class="mb-2">
                      <a href="{{ contact }}" class="text-muted text-decoration-none d-flex align-items-center">
                        <i class="fa-solid fa-angle-right me-2" style="font-size: 0.75rem;"></i>{{ text_contact }}
                      </a>
                    </li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
