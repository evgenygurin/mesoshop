<!-- Modern Cart Dropdown with Enhanced Design -->
<div class="dropdown d-grid">
  <button type="button"
          data-bs-toggle="dropdown"
          class="btn btn-lg btn-outline-primary d-block dropdown-toggle border-2 position-relative"
          aria-expanded="false">
    <i class="fa-solid fa-cart-shopping"></i>
    <span class="d-none d-md-inline ms-1">{{ text_items }}</span>
  </button>

  <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 p-0" style="min-width: 400px; max-width: 450px;">
    {% if products %}
      <li class="px-3 py-2 bg-light border-bottom">
        <h6 class="mb-0 text-dark fw-bold">
          <i class="fa-solid fa-shopping-bag me-2 text-primary"></i>Your Cart
        </h6>
      </li>

      <li class="cart-items" style="max-height: 400px; overflow-y: auto;">
        {% for product in products %}
          <div class="d-flex align-items-start p-3 border-bottom hover-bg-light">
            <!-- Product Image -->
            <div class="flex-shrink-0 me-3">
              {% if product.thumb %}
                <a href="{{ product.href }}" class="d-block">
                  <img src="{{ product.thumb }}"
                       alt="{{ product.name }}"
                       title="{{ product.name }}"
                       class="img-thumbnail rounded"
                       style="width: 60px; height: 60px; object-fit: cover;"/>
                </a>
              {% endif %}
            </div>

            <!-- Product Details -->
            <div class="flex-grow-1">
              <h6 class="mb-1 small">
                <a href="{{ product.href }}" class="text-dark text-decoration-none hover-text-primary">
                  {{ product.name }}
                </a>
              </h6>

              <ul class="list-unstyled mb-2 small text-muted">
                <li class="mb-0">{{ text_model }}: {{ product.model }}</li>
                {% for option in product.option %}
                  <li class="mb-0">{{ option.name }}: {{ option.value }}</li>
                {% endfor %}
                {% if product.subscription %}
                  <li class="mb-0">{{ text_subscription }}: {{ product.subscription }}</li>
                {% endif %}
                {% if product.reward %}
                  <li class="mb-0">{{ text_points }}: {{ product.reward }}</li>
                {% endif %}
              </ul>

              <div class="d-flex align-items-center justify-content-between">
                <span class="text-muted small">Qty: {{ product.quantity }}</span>
                <span class="fw-bold text-primary">
                  <x-currency code="{{ currency }}" amount="{{ product.total }}"></x-currency>
                </span>
              </div>
            </div>

            <!-- Remove Button -->
            <div class="flex-shrink-0 ms-2">
              <form action="{{ remove }}" method="post" data-oc-toggle="ajax" data-oc-load="{{ list }}" data-oc-target="#cart">
                <input type="hidden" name="key" value="{{ product.cart_id }}">
                <button type="submit"
                        data-bs-toggle="tooltip"
                        title="{{ button_remove }}"
                        class="btn btn-sm btn-link text-danger p-0 border-0">
                  <i class="fa-solid fa-times"></i>
                </button>
              </form>
            </div>
          </div>
        {% endfor %}
      </li>

      <!-- Cart Summary -->
      <li class="p-3 bg-light">
        <div class="mb-3">
          {% for total in totals %}
            <div class="d-flex justify-content-between mb-2 {% if loop.last %}border-top pt-2{% endif %}">
              <span class="{% if loop.last %}fw-bold{% else %}text-muted{% endif %}">
                {{ total.title }}
              </span>
              <span class="{% if loop.last %}fw-bold text-dark{% else %}text-muted{% endif %}">
                <x-currency code="{{ currency }}" amount="{{ total.value }}"></x-currency>
              </span>
            </div>
          {% endfor %}
        </div>

        <!-- Action Buttons -->
        <div class="d-grid gap-2">
          <a href="{{ checkout }}" class="btn btn-primary">
            <i class="fa-solid fa-check me-2"></i>{{ text_checkout }}
          </a>
          <a href="{{ cart }}" class="btn btn-outline-secondary btn-sm">
            <i class="fa-solid fa-shopping-cart me-2"></i>{{ text_cart }}
          </a>
        </div>
      </li>

    {% else %}
      <li class="text-center p-5">
        <i class="fa-solid fa-cart-shopping fa-3x text-muted mb-3 d-block"></i>
        <p class="text-muted mb-0">{{ text_no_results }}</p>
      </li>
    {% endif %}
  </ul>
</div>