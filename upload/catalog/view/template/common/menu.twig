{% if categories %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-4">
    <div class="container">
      {# Category Label for Mobile #}
      <span class="navbar-brand d-lg-none mb-0">{{ text_category }}</span>

      {# Toggler Button #}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      {# Navigation Menu #}
      <div class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav">
          {% for category in categories %}
            {% if category.children %}
              {# Dropdown Menu #}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="{{ category.href }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  {{ category.name }}
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  {% for child in category.children %}
                    <li>
                      <a class="dropdown-item" href="{{ child.href }}">
                        <i class="fa-solid fa-tag fa-xs me-2"></i>{{ child.name }}
                      </a>
                    </li>
                  {% endfor %}
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <a class="dropdown-item fw-bold" href="{{ category.href }}">
                      <i class="fa-solid fa-arrow-right fa-xs me-2"></i>{{ text_all }} {{ category.name }}
                    </a>
                  </li>
                </ul>
              </li>
            {% else %}
              {# Simple Link #}
              <li class="nav-item">
                <a class="nav-link" href="{{ category.href }}">{{ category.name }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
{% endif %}
