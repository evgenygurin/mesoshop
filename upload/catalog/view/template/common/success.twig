{{ header }}
<div id="common-success" class="container">
  <!-- Enhanced Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="my-3">
    <ol class="breadcrumb mb-0">
      {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item {% if loop.last %}active{% endif %}" {% if loop.last %}aria-current="page"{% endif %}>
          {% if not loop.last %}
            <a href="{{ breadcrumb.href }}" class="text-decoration-none">{{ breadcrumb.text }}</a>
          {% else %}
            {{ breadcrumb.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>

  <div class="row g-4">
    {{ column_left }}

    <!-- Main Success Content with Enhanced Styling -->
    <div id="content" class="col">
      {{ content_top }}

      <!-- Success Message Card -->
      <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
          <!-- Success Icon -->
          <div class="mb-4">
            <i class="fa-solid fa-check-circle fa-5x text-success"></i>
          </div>

          <!-- Success Title -->
          <h1 class="h3 fw-bold text-dark mb-3">{{ heading_title }}</h1>

          <!-- Success Message -->
          <div class="mb-4 text-muted">
            {{ text_message }}
          </div>

          <!-- Continue Button -->
          <a href="{{ continue }}" class="btn btn-primary btn-lg px-5">
            <i class="fa-solid fa-arrow-right me-2"></i>{{ button_continue }}
          </a>
        </div>
      </div>

      {{ content_bottom }}
    </div>

    {{ column_right }}
  </div>
</div>
{{ footer }}
