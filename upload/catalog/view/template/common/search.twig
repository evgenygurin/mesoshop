<!-- Enhanced Search Form with Modern Styling -->
<form action="{{ action }}" method="post" class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
	<input type="text"
	       name="search"
	       value="{{ search }}"
	       placeholder="{{ text_search }}"
	       class="form-control border-0 ps-4"
	       aria-label="{{ text_search }}"/>
	<button type="submit"
	        class="btn btn-primary px-4"
	        aria-label="Search">
		<i class="fa-solid fa-magnifying-glass"></i>
	</button>
</form>
