<div id="comment-0">
  {% if comments %}
    {% for comment in comments %}
      <div id="comment-{{ comment.article_comment_id }}" class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-3">
            <div class="flex-shrink-0">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="fa-solid fa-user"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1 fw-bold">{{ comment.author }}</h6>
              <small class="text-muted">
                <i class="fa-solid fa-clock me-1"></i>{{ comment.date_added }}
              </small>
            </div>
          </div>
          <p class="mb-3">{{ comment.comment }}</p>
          <div class="d-flex flex-wrap gap-2">
            {% if logged %}
              <button type="button" value="{{ comment.like }}" data-bs-toggle="tooltip" title="{{ button_like }}" data-oc-toggle="rate" class="btn btn-sm btn-outline-success">
                <i class="fa fa-thumbs-up me-1"></i>Like
              </button>
              <button type="button" value="{{ comment.dislike }}" data-bs-toggle="tooltip" title="{{ button_dislike }}" data-oc-toggle="rate" class="btn btn-sm btn-outline-danger">
                <i class="fa fa-thumbs-down me-1"></i>Dislike
              </button>
              <button type="button" value="{{ comment.reply_add }}" data-oc-toggle="comment" data-oc-target="#reply-{{ comment.article_comment_id }}" data-oc-trigger="#button-refresh-{{ comment.article_comment_id }}" class="btn btn-sm btn-outline-primary">
                <i class="fa fa-reply me-1"></i>{{ button_reply }}
              </button>
            {% else %}
              <a href="{{ login }}" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-thumbs-up me-1"></i>Like
              </a>
              <a href="{{ login }}" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-thumbs-down me-1"></i>Dislike
              </a>
              <a href="{{ login }}" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-reply me-1"></i>{{ button_login_reply }}
              </a>
            {% endif %}
          </div>
        </div>
        <div id="reply-{{ comment.article_comment_id }}" class="bg-light">
          <div id="reply-{{ comment.article_comment_id }}-0" class="px-4 pt-3"></div>
          <div class="text-center p-3 border-top">
            <button type="button" value="{{ comment.reply }}" id="button-refresh-{{ comment.article_comment_id }}" data-oc-toggle="refresh" data-oc-target="#reply-{{ comment.article_comment_id }}-0" class="btn btn-sm btn-outline-secondary d-none">
              <i class="fa fa-sync me-1"></i>Refresh
            </button>
            {% if comment.reply_total %}
              <button type="button" value="{{ comment.reply }}" data-oc-toggle="next" class="btn btn-sm btn-outline-dark">
                <i class="fa fa-comments me-1"></i>{{ button_replies }} ({{ comment.reply_total }})
              </button>
            {% else %}
              <button type="button" class="btn btn-sm btn-outline-secondary" disabled>
                <i class="fa fa-comments me-1"></i>{{ button_replies }}
              </button>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
    <div class="row">
      <div class="col-sm-6 text-start">{{ pagination }}</div>
      <div class="col-sm-6 text-end">{{ results }}</div>
    </div>
  {% else %}
    <div class="alert alert-info">
      <i class="fa-solid fa-info-circle me-2"></i>{{ text_no_results }}
    </div>
  {% endif %}
</div>
<div class="text-center p-2">
  <button type="button" value="{{ refresh }}" id="button-refresh" data-oc-toggle="refresh" data-oc-target="#comment-0" class="btn btn-secondary d-none"><i class="fa fa-sync"></i></button>
</div>



