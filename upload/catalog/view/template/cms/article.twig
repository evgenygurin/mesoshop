{{ header }}
<div id="cms-article" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    {{ column_left }}
    <div id="content" class="col">
      {{ content_top }}

      <article class="blog-post">
        <header class="mb-4 pb-4 border-bottom">
          <h1 class="display-4 fw-bold mb-3">{{ heading_title }}</h1>
          <div class="d-flex flex-wrap align-items-center text-muted mb-3">
            <div class="me-3">
              <i class="fa-solid fa-user me-2"></i>
              {{ text_by }} <a href="{{ filter_author }}" class="text-decoration-none fw-semibold text-dark">{{ author }}</a>
            </div>
            <div class="me-3">
              <i class="fa-solid fa-calendar-days me-2"></i>{{ date_added }}
            </div>
            <div>
              <i class="fa-solid fa-comments me-2"></i>{{ comment_total }} {{ text_comment }}
            </div>
          </div>
        </header>

        {% if image %}
          <div class="mb-4">
            <img src="{{ image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-fluid rounded shadow-sm"/>
          </div>
        {% endif %}

        <div class="article-content mb-5" style="font-size: 1.125rem; line-height: 1.8;">
          {{ description }}
        </div>

        {% if tags %}
          <div class="mb-4 pb-4 border-bottom">
            <h6 class="text-muted mb-3">{{ text_tags }}</h6>
            <div class="d-flex flex-wrap gap-2">
              {% for tag in tags %}
                <a href="{{ tag.href }}" class="badge bg-light text-dark border text-decoration-none px-3 py-2">
                  <i class="fa-solid fa-tag me-1"></i>{{ tag.tag }}
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        {% if comment %}
          <div id="comment" class="mt-5">
            <h3 class="mb-4">Comments</h3>
            {{ comment }}
          </div>
        {% endif %}
      </article>

      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}