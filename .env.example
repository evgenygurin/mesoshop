# MesoShop - Environment Configuration Template
# Copy this file to .env and customize the values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# HTTP SERVER CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# External HTTP port for the store
# Default: 80 (standard HTTP port)
# Change to 8000 or 8080 if port 80 is already in use
HTTP_PORT=80

# Timezone for the application
# See: https://www.php.net/manual/en/timezones.php
TZ=Europe/Moscow

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE CONFIGURATION (MariaDB 10.11)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Database root password (for admin access)
# ⚠️ CHANGE THIS IN PRODUCTION!
MYSQL_ROOT_PASSWORD=opencart_secure_2025

# OpenCart database name
MYSQL_DATABASE=opencart

# OpenCart database user
MYSQL_USER=opencart

# OpenCart database password
# ⚠️ CHANGE THIS IN PRODUCTION! Use 16+ characters
MYSQL_PASSWORD=opencart_db_pass

# External database port (optional)
# Uncomment to expose MySQL on host machine
# WARNING: Don't expose in production!
# DB_EXPOSE_PORT=3306

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OPENCART ADMIN CREDENTIALS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Admin username
# ⚠️ CHANGE THIS IMMEDIATELY! Don't use "admin" in production
OPENCART_ADMIN_USERNAME=admin

# Admin password
# ⚠️ CHANGE THIS IMMEDIATELY! Use strong password (16+ chars, mixed case, symbols)
OPENCART_ADMIN_PASSWORD=admin

# Admin email
OPENCART_ADMIN_EMAIL=admin@mesoshop.local

# Store HTTP server URL
# For local development: http://localhost/
# For production: https://yourdomain.com/
OPENCART_HTTP_SERVER=http://localhost/

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ADMINER (DATABASE MANAGER)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Adminer web interface port
# Access at: http://localhost:8080
ADMINER_PORT=8080

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OPTIONAL: REDIS CACHE (currently disabled in docker-compose.yml)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Uncomment to enable Redis caching
# REDIS_PORT=6379

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OPTIONAL: MEMCACHED (currently disabled in docker-compose.yml)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Uncomment to enable Memcached
# MEMCACHED_PORT=11211

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ADVANCED: DOCKER USER/GROUP IDs (for file permissions)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Set to your local user/group IDs to fix file permission issues
# Get your IDs: id -u (user) and id -g (group)
# USER_ID=1000
# GROUP_ID=1000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SECURITY RECOMMENDATIONS FOR PRODUCTION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 1. Change ALL passwords to strong, unique values (16+ characters)
# 2. Use HTTPS in production (update OPENCART_HTTP_SERVER)
# 3. Don't expose DB_EXPOSE_PORT in production
# 4. Rename admin folder (default: /admin)
# 5. Remove install directory after setup
# 6. Keep backups encrypted and off-site
# 7. Use environment-specific .env files (.env.dev, .env.prod)
# 8. Never commit .env to version control (it's in .gitignore)
